<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nanjsdk.sample">
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="true" />
    <application
        android:name="com.nanjsdk.sample.NANJApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.nanjsdk.sample.SplashActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.nanjsdk.sample.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nanjsdk.sample.WalletsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nanjsdk.sample.SendCoinActivity"
            android:screenOrientation="portrait" />

        <activity android:name="com.nanjsdk.sample.ChooseCoinTypeActivity"
            android:screenOrientation="portrait" />

        <activity android:name="com.nanjsdk.sample.MoreDetailActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.nanjcoin.sdk.ui.nfc.NANJNfcActivity">
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
    </application>
</manifest>
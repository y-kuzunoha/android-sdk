<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imAddressWallet"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_height="120dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:padding="10dp"
        android:gravity="center"
        tools:text="nope"
        app:layout_constraintTop_toBottomOf="@+id/imAddressWallet"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/amountUsd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="30dp"
        tools:text="$9,115.66 &#xf3d1;"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:fontFamily="@font/font_awesome"
        app:layout_constraintTop_toBottomOf="@+id/address"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/nanjRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:padding="10dp"
        tools:text="$9,115.66"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:fontFamily="@font/font_awesome"
        app:layout_constraintTop_toBottomOf="@+id/amountUsd"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/nanjRate" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/sendNANJCoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/txt_send"
        app:layout_constraintBottom_toBottomOf="parent" />
    
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/darker_gray" />

</android.support.constraint.ConstraintLayout>